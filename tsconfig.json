{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "CommonJS",
        "target": "ES2019",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "strictNullChecks": true,
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "sourceMap": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "tests"]
}